import java.util.Scanner;
import java.lang.Math;
class Main
{
    public static void main(String args[])
    {
            int s,a,g;
            int[] i=new int[10];
           Scanner sc=new Scanner(System.in);
        
        
        int n=sc.nextInt();
    if(n/10==0)
    System.out.println("Invalid Input");
    else
    {
    for(a=0;n!=0;a++)
    {
    s=n%10;
   
    n=n/10;

    i[a]=s;
    }
    
    g=Math.abs(i[0]-i[a-1]);
    System.out.println(g);
    }
   
}
       
}
