import java.util.Scanner;
class Main
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int a,b,c;
        System.out.println("Enter the value of X");
        int x=sc.nextInt();
        System.out.println("Enter the value of Y");
        int y=sc.nextInt();
        
         a=(y-(5*x))/13;
         b=x+a;
         c=(2*a);
         
         System.out.println("Number of children tickets sold : "+a);
         System.out.println("Number of adult tickets sold : "+b);
         System.out.println("Number of senior tickets sold : "+c);
    
    }
}
